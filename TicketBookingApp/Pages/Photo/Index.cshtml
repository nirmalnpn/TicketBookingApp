@page
@model TicketBookingApp.Pages.Photo.IndexModel

@{
    ViewData["Title"] = "Adventure Photos";
}

<h2>Adventure Photos</h2>

@if (Model.Photos.Any())
{
    <div class="photo-gallery">
        @foreach (var photo in Model.Photos)
        {
            <div class="photo-item">
                <img src="@photo.FilePath" alt="@photo.FileName" />
                <p>@photo.FileName</p>
            </div>
        }
    </div>
}
else
{
    <p>No photos available for this adventure.</p>
}

<h3>Upload New Photo</h3>

<form method="post" enctype="multipart/form-data">
    <div>
        <label for="AdventureId">Adventure</label>
        <select id="AdventureId" name="AdventureId" required>
            @foreach (var adventure in Model.Adventures)
            {
                <option value="@adventure.Id">@adventure.Name</option>
            }
        </select>
    </div>
    <div>
        <label for="File">Photo</label>
        <input type="file" id="File" name="File" required />
    </div>
    <button type="submit" class="btn">Upload Photo</button>
</form>
