@page
@model TicketBookingApp.Pages.Adventure.DetailsModel

@{
    ViewData["Title"] = "Adventure Details";
}

@if (Model.Adventure != null)
{
    <article>
        <header>
            <h2>@Model.Adventure.Name</h2>
        </header>
        <figure>
            <img src="@Model.Adventure.ImageUrl" alt="Image of @Model.Adventure.Name" class="adventure-image" />
            <figcaption>@Model.Adventure.Name</figcaption>
        </figure>
        <section>
            <p>@Model.Adventure.Description</p>
            <p><strong>Price:</strong> @Model.Adventure.Price</p>
            <p><strong>Location:</strong> @Model.Adventure.Location</p>
            <p><strong>Duration:</strong> @Model.Adventure.Duration</p>
        </section>
        <footer>
            <a asp-page="/Booking/BookAdventure" asp-route-id="@Model.Adventure.Name" class="btn btn-primary">Book Now</a>
        </footer>
    </article>
}
else
{
    <p>Adventure details not available.</p>
}
